{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions":[
    {
      "name": "api",
      "image": "jiangwensi/mrbs-backend",
      "hostname": "api",
      "memory": 512,
      "essential": false,
      "Ports": [
        {
          "ContainerPort": 8080,
          "HostPort": 8080
        }
      ]
    },
    {
      "name": "ui",
      "image": "jiangwensi/mrbs-ui",
      "hostname": "ui",
      "essential": false,
      "memory": 128,
      "Ports": [
        {
          "ContainerPort": 3000,
          "HostPort": 3000
        }
      ]
    },
    {
      "name":"nginx",
      "image":"jiangwensi/mrbs-nginx",
      "hostname":"nginx",
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "essential": true,
      "dependsOn": [
        {
          "containerName": "api",
          "condition": "SUCCESS"
        },
        {
          "containerName": "ui",
          "condition": "SUCCESS"
        }
      ],
      "links": [
        "ui","api"
      ],
      "memory": 128
    }
  ]
}